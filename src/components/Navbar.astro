---
import logo from '../assets/logo_brasil_serv.svg'
import NavDropDownMobile from './NavDropDownMobile.astro'
---
<header 
    class=" flex flex-col w-full justify-center items-center bg-secundary py-4"
    x-data
    x-init="$store.display.setDisplay()"
    @resize.window.debounce="$store.display.setDisplay()"
>
    <section class=" flex justify-between max-w-[1280px] w-full h-9 px-5">
        <div class=" flex items-center gap-6">
            <img class=" w-[119px] h-[36px]" src={logo.src} alt="brasilserv logo">
            <template x-data x-if="$store.display.screen=='desktop'||$store.display.screen=='tablet'">
                <nav class="text-base font-roboto text-backwhite">
                    <ul class="flex gap-8 ">
                        <li>
                            <a href="">Início</a>
                        </li>
                        <li>
                            <a href="">Benefícios</a>
                        </li>
                        <li>
                            <a href="">Serviços</a>
                        </li>
                        <li>
                            <a href="">Sobre nóso</a>
                        </li>
                        <li>
                            <a href="">Contato</a>
                        </li>
                    </ul>
                </nav>
            </template>
        </div>
        <template x-data x-if="$store.display.screen=='desktop'">
            <a
                x-on:mouseover="animate($el, { scale: 1.1 })" 
                x-on:mouseleave="animate($el, { scale: 1 })"  
                class=" py-2 px-5 text-base font-roboto text-secundary bg-backwhite rounded-lg cursor-pointer"
                href="https://wa.me/" target="_blank" rel="noopener noreferrer"
            >
                Entre em contato
            </a>
        </template>
        <template x-data x-if="$store.display.screen=='mobile'||$store.display.screen=='phone'">
            <NavDropDownMobile/>
        </template>
    </section>
</header>